<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.crypto_app.HomeFragment.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_cryptoDetailFragment"
            app:destination="@id/cryptoDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/marketFragment"
        android:name="com.example.crypto_app.MarketFragment.MarketFragment"
        android:label="fragment_market"
        tools:layout="@layout/fragment_market" >
        <action
            android:id="@+id/action_marketFragment_to_cryptoDetailFragment"
            app:destination="@id/cryptoDetailFragment">
        </action>
    </fragment>
    <fragment
        android:id="@+id/watchlistFragment"
        android:name="com.example.crypto_app.WatchlistFragment"
        android:label="fragment_watchlist"
        tools:layout="@layout/fragment_watchlist" />
    <fragment
        android:id="@+id/cryptoDetailFragment"
        android:name="com.example.crypto_app.CryptoDetailFragment.CryptoDetailFrag"
        android:label="CryptoDetailFragment" />
</navigation>